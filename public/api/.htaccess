# API Directory Configuration for Hostinger
# Protects sensitive files and enables PHP processing

# Deny access to configuration and log files
<FilesMatch "^(config\.php|\.htaccess|\.htpasswd)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Deny access to logs directory
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteRule ^logs/ - [F,L]
</IfModule>

# Enable PHP processing
<IfModule mod_mime.c>
    AddType application/x-httpd-php .php
</IfModule>

# Security headers for API responses
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "DENY"
    Header always set X-XSS-Protection "1; mode=block"
</IfModule>

